{
    // Workbench
    "workbench.colorTheme": "Dracula", // Define o tema do VSCode
    "workbench.iconTheme": "material-icon-theme", // Define o tema dos ícones na sidebar
    "workbench.startupEditor": "newUntitledFile",
    "workbench.activityBar.visible": true,
    "workbench.sideBar.location": "left",
    "workbench.editorAssociations": {
      "*.ipynb": "jupyter.notebook.ipynb"
    },

    // Editor
    "editor.parameterHints.enabled": false,
    "editor.tabSize": 2,
    "editor.fontSize": 15,
    "editor.lineHeight": 24,
    "editor.fontFamily": "Fira Code",
    "editor.fontLigatures": true,
    "editor.suggestSelection": "first",
    "editor.rulers": [100, 140], // Aplica linhas verticais para lembrar de quebrar linha em códigos muito grandes
    "editor.formatOnSave": false,
    "editor.renderLineHighlight": "gutter", // Aplica um sinal visual na esquerda da linha selecionada

    // Integrated Terminal
    "terminal.integrated.shell.linux": "/bin/zsh",
    "terminal.integrated.tabs.enabled": false,
    "terminal.integrated.fontSize": 14, // Aumenta a fonte do terminal
  
    // Explorer
    "explorer.compactFolders": false,
    "explorer.confirmDragAndDrop": false,
    "explorer.confirmDelete": false,
  
    // Others
    "extensions.ignoreRecommendations": true,
    "breadcrumbs.enabled": true,

    // Git and Git Lens
    "gitlens.codeLens.recentChange.enabled": false,
    "gitlens.codeLens.authors.enabled": false,
    "gitlens.codeLens.enabled": false,
    "git.enableSmartCommit": true,
    "diffEditor.renderSideBySide": true,
    "diffEditor.ignoreTrimWhitespace": false,

    // EsLint
    "eslint.packageManager": "yarn",
    "eslint.validate": [
      "javascript",
      "javascriptreact",
      "html",
      "typescript",
      "typescriptreact"
    ],
    "eslint.alwaysShowStatus": true,
    
    // JavaScript
    "javascript.suggest.autoImports": true,
    "javascript.updateImportsOnFileMove.enabled": "never",
    "[javascript]": {
      "editor.codeActionsOnSave": {
        "source.fixAll.eslint": false,
      },
      "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[javascriptreact]": {
      "editor.codeActionsOnSave": {
        "source.fixAll.eslint": false,
      },
      "editor.defaultFormatter": "esbenp.prettier-vscode"
    },

    // TypeScript
    "typescript.updateImportsOnFileMove.enabled": "never",
    "typescript.tsserver.log": "verbose",
    "typescript.suggest.autoImports": true,
    "[typescript]": {
      "editor.codeActionsOnSave": {
        "source.fixAll.eslint": false,
      },
      "editor.defaultFormatter": "vscode.typescript-language-features"
    },
    "[typescriptreact]": {
      "editor.codeActionsOnSave": {
        "source.fixAll.eslint": false,
      },
      "editor.defaultFormatter": "esbenp.prettier-vscode"
    },

    // CSS
    "[css]": {
      "editor.defaultFormatter": "esbenp.prettier-vscode"
    },

    // Handlebars
    "[handlebars]": {
      "editor.defaultFormatter": "vscode.html-language-features"
    },

    // JSON
    "[json]": {
      "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    
    // HTML
    "[html]": {
      "editor.defaultFormatter": "vscode.html-language-features"
    },

    // Emmet
    "emmet.syntaxProfiles": {
      "javascript": "jsx",
    },
    "emmet.includeLanguages": {
      "javascript": "javascriptreact",
    },

    // Material Icon Configuration
    "material-icon-theme.folders.associations": {
      "infra": "app",
      "entities": "class",
      "schemas": "class",
      "typeorm": "database",
      "repositories": "mappings",
      "http": "container",
      "migrations": "tools",
      "seeders": "generator",
      "modules": "components",
      "implementations": "core",
      "dtos": "typescript",
      "fakes": "mock",
      "websockets": "pipe",
      "protos": "pipe",
      "grpc": "pipe",
      "Exceptions": "Error",
      "Logging": "Log",
      "types": "typescript"
    },
    "material-icon-theme.activeIconPack": "nest",
    "material-icon-theme.files.associations": {
      "ormconfig.json": "database",
      "tsconfig.json": "tune",
      "*.proto": "3d",
      "routes.*": "routing",
      "prettierrc.json": "prettier" 
    },
    "files.associations": {
      ".sequelizerc": "javascript",
      ".stylelintrc": "json",
      ".prettierrc": "json"
    },
    "files.exclude": {
      "**/.classpath": true,
      "**/.project": true,
      "**/.settings": true,
      "**/.factorypath": true
    },

    // Code Spell Configuration
    "cSpell.language": "en, pt-BR",
    "cSpell.userWords": [
      "Cryptlex",
      "Hubstaff",
      "Ionicons",
      "Neomorph",
      "Neomorphic",
      "Nunito",
      "Popconfirm",
      "Sider",
      "Swal",
      "adonisjs",
      "antd",
      "camelcase",
      "cloudinary",
      "datetime",
      "dtos",
      "extendida",
      "extendidas",
      "fieldname",
      "iugu",
      "nestjs",
      "notificate",
      "originalname",
      "reduxjs",
      "rollbar",
      "signup",
      "skybox",
      "slugified",
      "smallint",
      "storaged",
      "tinyint",
      "typeorm",
      "unmount",
      "varchar",
      "waait",
      "wireframe"
    ],

    // Conventional Commits
    "conventionalCommits.scopes": [
      "seeds",
      "migrations",
      "controllers",
      "models",
      "scripts",
      "routes",
      "lint",
      "readme",
      "api",
      "story"
    ],
    "conventionalCommits.emojiFormat": "emoji",
    "conventionalCommits.autoCommit": false,
      
    // liveServer and liveShare
    "liveServer.settings.donotShowInfoMsg": true,
    "liveshare.authenticationProvider": "GitHub",

    // Todo-Tree
    "todo-tree.tree.showScanModeButton": false,

    // Tab nine
    "tabnine.experimentalAutoImports": true,

    // VSintellicode
    "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",  
  }
